<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:padding="20dp">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnPilihPengaduan"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@drawable/button_background"
        android:text="PENGADUAN"
        android:textColor="@color/white"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnPilihPengaduanLain"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_below="@+id/btnPilihPengaduan"
        android:background="@drawable/button_background2"
        android:text="PENGADUAN LAIN"
        android:textColor="@color/white"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnPilihPengaduanLain"
        android:textStyle="italic"
        android:text="*Apabila lokasi pengaduan di luar wewenang Dinas PUPR HST, pilih PENGADUAN LAIN"/>



</RelativeLayout>